# Template for local configuration.
# Copy this file to `.env` (do not commit) and fill in values.

# Last.fm
LASTFM_API_KEY=
LASTFM_USER=

# iDotMatrix
# Use "auto" to scan for the first IDM-* device, or set a specific MAC like AA:BB:CC:DD:EE:FF
IDOTMATRIX_ADDRESS=auto

# Poll interval (seconds)
POLL_INTERVAL=5

# Overlay clock on album art (now_playing.py)
# Set to true to draw a small clock on top of the album art before uploading.
SHOW_CLOCK=false

# Optional clock tuning (only used when SHOW_CLOCK=true)
# CLOCK_FORMAT defaults to 12-hour time. Example alternative: %H:%M
CLOCK_FORMAT=%I:%M
CLOCK_STRIP_LEADING_ZERO=true
CLOCK_POSITION=bottom-right
CLOCK_RENDER=tiny

# RGB colors as comma-separated values
CLOCK_FG=255,255,255
CLOCK_BG=0,0,0

# Padding around the text and margin from the edge (pixels)
CLOCK_PADDING=1
CLOCK_MARGIN=1

# Built-in device clock when idle (now_playing.py)
# Switch the iDotMatrix into its built-in clock mode when no music is playing.
USE_DEVICE_CLOCK_WHEN_IDLE=false

# Wait time before switching (seconds)
IDLE_TO_CLOCK_AFTER_SECONDS=30

# Hold the last album art briefly to avoid flicker when Last.fm hiccups
PLAYING_HOLD_SECONDS=180

# Built-in clock appearance
DEVICE_CLOCK_STYLE=3
DEVICE_CLOCK_WITH_DATE=false
DEVICE_CLOCK_24H=false
DEVICE_CLOCK_COLOR=255,80,0

# Keep device time accurate for the built-in clock
SYNC_DEVICE_TIME_ON_START=true
SYNC_DEVICE_TIME_ON_ENTER_CLOCK=true
